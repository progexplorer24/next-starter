{
  "name": "next-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run-unit": "cypress run --spec \"./components/**/*\"",
    "test:unit": "start-server-and-test dev http://localhost:3000 cy:run-unit",
    "test:e2e": "start-server-and-test dev http://localhost:3000 cy:open",
    "test:e2e:ci": "start-server-and-test dev http://localhost:3000 cy:run"
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@mdx-js/loader": "^1.6.5",
    "@mdx-js/react": "^1.6.5",
    "@next/mdx": "^9.4.4",
    "@types/mdx-js__react": "^1.5.2",
    "dedent": "^0.7.0",
    "emotion": "^11.0.0-next.10",
    "framer-motion": "^1.11.1",
    "mini-svg-data-uri": "^1.2.3",
    "next": "11.1.3",
    "polished": "^3.6.5",
    "prettier": "2.0.5",
    "prism-react-renderer": "^1.1.1",
    "ramda": "^0.27.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "twin.macro": "^1.3.0",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@cypress/code-coverage": "^3.7.2",
    "@cypress/webpack-preprocessor": "^5.2.0",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@svgr/webpack": "^5.4.0",
    "@types/cypress-axe": "^0.8.0",
    "@types/node": "^14.0.4",
    "@types/prettier": "^2.0.1",
    "@types/ramda": "^0.27.7",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.8",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-emotion": "^10.0.33",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-macros": "^2.8.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "cypress": "^4.5.0",
    "cypress-axe": "^0.8.1",
    "cypress-react-unit-test": "^4.2.1",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-emotion": "^10.0.27",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-unicorn": "^20.0.0",
    "file-loader": "^6.0.0",
    "husky": "^4.2.5",
    "istanbul-lib-coverage": "^3.0.0",
    "lint-staged": "^10.2.2",
    "nyc": "^15.0.1",
    "pretty-quick": "^2.0.1",
    "start-server-and-test": "^1.11.0",
    "typescript": "^3.8.3",
    "typescript-plugin-tw-template": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/!(.eslintrc.js).{js,jsx,ts,tsx}": [
      "pretty-quick --staged",
      "./lint-staged.sh --fix"
    ],
    "./**/*.{json,md,mdx}": [
      "pretty-quick --staged"
    ]
  },
  "babelMacros": {
    "twin": {
      "config": "./tailwind.config.js",
      "format": "auto",
      "hasSuggestions": true,
      "debug": false
    }
  },
  "nyc": {
    "exclude": [
      "pages/api/__coverage.js"
    ]
  }
}
